{
  "name": "Rust Dev Container",
  "dockerComposeFile": [
    "../docker-compose.yml"
  ],
  "service": "app",
  "workspaceFolder": "/app",
  "remoteUser": "root",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh"
      },
      "extensions": [
        //  日本語
        "ms-ceintl.vscode-language-pack-ja",
        //  Rustの解析
        "rust-lang.rust-analyzer",
        //  Docker
        "ms-azuretools.vscode-docker",
        //  Markdown  
        "yzhang.markdown-all-in-one"
      ]
    }
  },
  "postCreateCommand": "bash -c 'sh .devcontainer/setup.sh'",
  "postStartCommand": "git config --global user.name \"$(git config --global user.name)\" && git config --global user.email \"$(git config --global user.email)\""
}